<%- include('upload/header') %>
<div class="container mt-5">
    <h1 class="text-center mb-4">Update Faculty</h1>
    
    <!-- Create a Bootstrap form with grid layout for better responsiveness -->
    <form action="/admin/faculty/update/<%= faculty._id %>" method="POST">
        <div class="row mb-3">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" value="<%= faculty.name %>" required>
            </div>
        </div>

        <div class="row mb-3">
            <label for="department" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="department" name="department" value="<%= faculty.department %>" required>
            </div>
        </div>

        <div class="row mb-3">
            <label for="designation" class="col-sm-2 col-form-label">Designation</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="designation" name="designation" value="<%= faculty.designation %>" required>
            </div>
        </div>

        <div class="row mb-3">
            <label for="contact" class="col-sm-2 col-form-label">Contact</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contact" name="contact" value="<%= faculty.contact %>" required>
            </div>
        </div>

        <!-- Submit and Cancel buttons in a horizontal layout -->
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2">Update Faculty</button>
                <a href="/admin/faculty" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
<%- include('upload/footer') %>
