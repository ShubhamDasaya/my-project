<%- include('upload/header') %>
<div class="container mt-5">
    <h1>Update Student</h1>
    <form action="/admin/student/update/<%= student._id %>" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= student.name %>" required>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" id="age" name="age" value="<%= student.age %>" required>
        </div>
        <div class="mb-3">
            <label for="stream" class="form-label">Stream</label>
            <input type="text" class="form-control" id="stream" name="stream" value="<%= student.stream %>" required>
        </div>
        <div class="mb-3">
            <label for="sem" class="form-label">Semester</label>
            <input type="number" class="form-control" id="sem" name="sem" value="<%= student.sem %>" required>
        </div>
        <div class="mb-3">
            <label for="codingLevel" class="form-label">Coding Level</label>
            <input type="text" class="form-control" id="codingLevel" name="codingLevel" value="<%= student.codingLevel %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Student</button>
    </form>
</div>
<%- include('upload/footer') %>
