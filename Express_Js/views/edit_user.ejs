<%- include('layout/header') %>
<div class = "container">
    <div class="row">
       <div class=""co-lg-12"">
       
       </div>
        
    </div>
</div>
<%- include('layout/footer') %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <!-- Card Header -->
                <div class="card-header bg-success text-white text-center py-3 rounded-top">
                    <h4 class="fw-bold">Edit User (<%= user.name %>)</h4>
                 
                </div>
                <!-- Card Body -->
                <div class="card-body p-3">
                    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <!-- Name Input -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" name="name" class="form-control" placeholder="Enter full name" value="<%= user.name %>" required>
                            </div>
                        </div>
                        <!-- Email Input -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" name="email" class="form-control" placeholder="Enter email address" value="<%= user.email %>" required>
                            </div>
                        </div>
                        <!-- Phone Input -->
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-phone"></i>
                                </span>
                                <input type="tel" name="phone" class="form-control" placeholder="Enter phone number" value="<%= user.phone %>" required>
                            </div>
                        </div>
                        <!-- Image Input -->
                        <div class="mb-3">
                            <label for="image" class="form-label">Profile Picture</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-image"></i>
                                </span>
                                <input type="file" name="image" class="form-control" >
                               <img src="/<%= user.image %>"  width="100" class="img-thumbnail mt-1">
                               <input type="hidden" name="old_image" value="<%= user.image %>">
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" name="submit" class="btn btn-success rounded-pill" value="update User">
                                <i class="fas fa-user-plus me-1"></i> Add User
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Card Footer -->
                <div class="card-footer text-center bg-light py-2">
                    <small>Need help? <a href="#" class="text-primary">Contact Support</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
