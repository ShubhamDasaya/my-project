<%- include('layout/header') %>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive shadow-lg rounded">
                <% if (users && users.length > 0) { %>
                    <table class="table table-hover align-middle table-bordered my-3">
                        <!-- Table Header -->
                        <thead class="bg-light text-white text-center ">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">E-mail</th>
                                <th scope="col">Phone No.</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <!-- Table Body -->
                        <tbody class="text-center">
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td>
                                    <td><img src="<%= row.image %>" class="img-thumbnail" width="50"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success me-2">
                                            <i class="fas fa-edit fa-lg"></i>
                                        </a>

                                        <a href="/delete/<%= row._id %>" class="text-danger">
                                            <i class="fas fa-trash fa-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the Database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
